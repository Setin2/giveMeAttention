{
    "manifest_version": 3,
    "name": "giveMeAttention",
    "description": "Notify another user that you want their attention",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_icon": "./images/heart.png",
        "default_title": "Give Me Attention",
        "default_popup": "/src/popup/popup.html"
    },
    "background": {
        "service_worker": "/src/popup/background.js"
    },
    "web_accessible_resources": [{
        "resources": ["/images/heart.png"],
        "matches": ["https://www.google.com/*"]
    }],
    "icons": {
        "16": "./images/heart.png",
        "48": "./images/heart.png",
        "128": "./images/heart.png"
    },
    "content_scripts": [{
        "matches": ["https://www.google.com/*"],
        "js": ["/src/smtp.js", "/src/jQuery.js", "/src/index.js"],
        "css": ["/src/style.css"]
    }]
}