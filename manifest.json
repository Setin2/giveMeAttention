{
    "manifest_version": 3,
    "name": "giveMeAttention",
    "description": "Notify another user that you want their attention",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "web_accessible_resources": [{
        "resources": ["/images/heart.png"],
        "matches": ["https://www.google.com/*"]
    }],
    "icons": {
        "16": "./images/heart.png",
        "48": "./images/heart.png",
        "128": "./images/heart.png"
    },
    
    "page_action": {
        "default icon": {
            "16": "./images/heart.png",
            "48": "./images/heart.png",
            "128": "./images/heart.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.google.com/*"],
        "js": ["/src/smtp.js", "/src/jQuery.js", "/src/index.js"],
        "css": ["/src/style.css"]
    }]
}